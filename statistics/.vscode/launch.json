    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch statistics",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "8084"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true,
            "preLaunchTask": "python: install"
        }
    ],
}