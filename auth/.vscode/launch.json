    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch auth-service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/auth-service/auth-service.go",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Launch auth-service (postgres)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/auth-service/auth-service.go",
            "cwd": "${workspaceFolder}",
            "env": {"AUTH_USE_REAL_DB": true }
        }
    ]
}